{
  "$schema": "https://tauri.app/schema.json",
  "package": {
    "productName": "Dexteri++",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "assets",
    "distDir": "assets",
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "open": true
      }
    },
    "windows": [
      {
        "title": "Dexteri++",
        "width": 1280,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": false,
      "identifier": "com.dexteri.app"
    },
    "security": {
      "csp": "default-src 'self' data: blob: 'unsafe-inline' 'unsafe-eval'"
    }
  }
}
